                <% method.categories.forEach(category=> { %>
                    <% if (method.slug=="roadmap" ) {%>
                        <h2 class="tag">
                            <%= category.title %>
                        </h2>
                        <% } %>
                            <% }) %>
                                <% }) %>
        </section>

        <section class="tags-b">
            <img class="icon" src="assets/icon2.png" alt="">
            <% methods.forEach(method=> { %>
                <% method.material.forEach(material=> { %>
                    <% if (method.slug=="roadmap" ) {%>
                        <h2 class="tag">
                            <%= material %>
                        </h2>
                        <% } %>
                            <% }) %>
                                <% }) %>
        </section>

        <section class="tags-b">
            <img class="icon" src="assets/icon3.png" alt="">
