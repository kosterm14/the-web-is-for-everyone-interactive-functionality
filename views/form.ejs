<%- include('./partials/headForm') %>

    <nav>
        <ul>
            <a href="/method/<%= detail.method.slug %>/template">
                <li>
                    <h2>Template</h2>
                </li>
            </a>
            <a href="/method/<%= detail.method.slug %>/beschrijving">
                <li>
                    <h2>Beschrijving</h2>
                </li>
            </a>
            </a>
            <a href="/method/<%= detail.method.slug %>/stappenplan">
                <li>
                    <h2>Stappenplan</h2>
                </li>
            </a>
            </a>
            <a href="/method/<%= detail.method.slug %>/voorbeelden">
                <li>
                    <h2>Voorbeelden</h2>
                </li>
            </a>
            <li>
                <h2 class="bold">Feedback</h2>
            </li>
        </ul>
    </nav>
    </main>

    <section class="animate__animated animate__backInLeft">
        <section class="form">
            <section class="comment">
                <h2>Comment section</h2>
                <h3 class="message">Het kan 30 seconden duren voor je comment hier staat. <br> Pls druk maar 1x op
                    verzenden.</h3>
                <% form.comments.forEach(comment=> { %>
                    <ul>
                        <li>
                            <h3>
                                <b>
                                    <%= comment.author %>
                                </b>
                                <%= comment.text %>
                            </h3>
                        </li>
                    </ul>
                    <% }) %>
            </section>

            <form action="/method/<%= detail.method.slug %>/form" method="post">
                <% if(locals.error !==undefined){ %>
                    <p class="message">
                        <%= error %>
                    </p>
                    <% } %>

                        <fieldset>
                            <legend><span></span>Comments hier pls:)</legend>

                            <label for="author">Naam</label>
                            <input required type="text" name="author" id="author" placeholder="..." />

                            <label for="text">Jouw comment</label>
                            <input required type="text" name="text" id="text" placeholder="..." />

                            <label for="methodId"></label>
                            <input type="hidden" name="methodId" id="methodId" value="<%= detail.method.id %>" />

                            <input class="submit-button" type="submit" value="Verzend" />
                        </fieldset>
            </form>
        </section>
    </section>
    </body>

    <%- include('./partials/foot') %>